public fuction hoge_action(Request $request){
    foreach($request->menu_ids as $menu_id){
        $menu = Menu::find($menu_id);
        $record = new RecordMenu;
        $record->menu = $menu->menu;
        $record->sets = $menu->sets;
        .
        .
        $record->save();

    }
    .
    .
}


